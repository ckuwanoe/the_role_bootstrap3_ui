- content_for :role_sidebar do
  .panel.panel-primary
    .panel-heading Role Nav
    .panel-body
      %h4= link_to raw('&larr; Home'), root_path

  .panel.panel-primary
    .panel-heading= t '.roles_list'
    .panel-body
  
      %ol.sortable_tree{ data: { max_levels: 5, rebuild_url: rebuild_admin_roles_url } }
        = build_server_tree(@roles, {:namespace => :admin})

      %p.new
        = button_to t('.new_role'), new_admin_role_path, class: 'btn btn-success'
           